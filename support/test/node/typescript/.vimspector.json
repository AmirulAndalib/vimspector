{
  "configurations": {
    "run - js-debug": {
      "adapter": "js-debug",
      "filetypes": [ "javascript", "typescript" ],
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}/src/index.ts",
        "cwd": "${workspaceRoot}",
        "stopOnEntry": false,
        "type": "pwa-node"
      },
      "breakpoints": {
        "exception": {
          "all": "",
          "uncaught": ""
        }
      }
    }
  }
}
